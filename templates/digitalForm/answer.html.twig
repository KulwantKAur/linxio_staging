<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        body {
            font-family: 'Roboto', 'Helvetica Neue', 'Arial', sans-serif;
            font-size: 1.1rem;
        }

        .title-container {
            display: flex;
            padding: 20px 0;
            flex-flow: row wrap;
            box-sizing: border-box;
            place-content: flex-end flex-start;
            align-items: baseline;
        }

        h1, .h1 {
            font-size: 2rem;
            font-weight: 500;
            letter-spacing: -.37px;
        }

        .primary-info {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
            font-size: 2rem;
            font-weight: 600;
        }

        .primary-info-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding-bottom: 2em;
            border-bottom: 1px solid #dce0e6;
        }

        .additional-info-container {
            width: 100%;
            padding: 2em 0;
            border-bottom: 1px solid #dce0e6;
        }

        .additional-info {
            display: flex;
            font-size: 1.3rem;
        }

        .additional-info-title {
            min-width: 300px;
        }

        .additional-info:not(:first-child) {
            padding-top: 10px;
        }

        .answer {
            display: flex;
            padding: 1.5em 1.5em 1.5em 0;
            border-bottom: 1px solid #dce0e6;
        }

        .answer-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .answer-info-content {
            display: flex;
            flex-direction: column;
        }

        .answer-info-content-title {
            font-size: 1.2em;
        }

        .answer-info-content-description {
            color: #757575;
            font-size: .9em;
        }

        .answer-info-content-result {
            display: flex;
            flex-direction: column;
            /*white-space: pre-wrap;*/
            text-decoration: none !important;
        }

        .answer-info-content-result-block {
            display: flex;
            align-items: center;
            padding-top: 5px;
        }

        .italic {
            font-style: italic;
        }

        .status-pass {
            color: #4caf50;
        }

        .status-fail {
            color: #f44336;
        }

        .answer-sign-container {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            width: 100%;
        }

        .answer-signature {
            width: 180px;
            height: 180px;
            margin-bottom: 2em;
        }

        .answer-info-content-description, .answer-info-content-image, .answer-info-content-result {
            padding-top: 0.6em;
        }

        .checkbox-wrapper-4 * {
            box-sizing: border-box;
        }

        .checkbox-wrapper-4 .cbx {
            -webkit-user-select: none;
            user-select: none;
            cursor: pointer;
            padding: 6px 0;
            border-radius: 6px;
            overflow: hidden;
            transition: all 0.2s ease;
            display: inline-block;
        }

        .checkbox-wrapper-4 .cbx:not(:last-child) {
            margin-right: 6px;
        }

        .checkbox-wrapper-4 .cbx:hover {
            background: rgba(0, 119, 255, 0.06);
        }

        .checkbox-wrapper-4 .cbx span {
            float: left;
            vertical-align: middle;
            transform: translate3d(0, 0, 0);
        }

        .checkbox-wrapper-4 .cbx span:first-child {
            position: relative;
            width: 18px;
            height: 18px;
            border-radius: 4px;
            transform: scale(1);
            border: 1px solid #cccfdb;
            transition: all 0.2s ease;
            box-shadow: 0 1px 1px rgba(0, 16, 75, 0.05);
        }

        .checkbox-wrapper-4 .cbx span:first-child svg {
            position: absolute;
            top: 3px;
            left: 2px;
            fill: none;
            stroke: #fff;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke-dasharray: 16px;
            stroke-dashoffset: 16px;
            transition: all 0.3s ease;
            transition-delay: 0.1s;
            transform: translate3d(0, 0, 0);
        }

        .checkbox-wrapper-4 .cbx span:last-child {
            padding-left: 8px;
            line-height: 18px;
        }

        .checkbox-wrapper-4 .cbx:hover span:first-child {
            border-color: #4caf50;
        }

        .checkbox-wrapper-4 .inp-cbx {
            position: absolute;
            visibility: hidden;
        }

        .checkbox-wrapper-4 .inp-cbx:checked + .cbx span:first-child {
            background: #4caf50;
            border-color: #4caf50;
            animation: wave-4 0.4s ease;
        }

        .checkbox-wrapper-4 .inp-cbx:checked + .cbx span:first-child svg {
            stroke-dashoffset: 0;
        }

        .checkbox-wrapper-4 .inline-svg {
            position: absolute;
            width: 0;
            height: 0;
            pointer-events: none;
            user-select: none;
        }

        @media screen and (max-width: 640px) {
            .checkbox-wrapper-4 .cbx {
                width: 100%;
                display: inline-block;
            }
        }

        @-moz-keyframes wave-4 {
            50% {
                transform: scale(0.9);
            }
        }

        @-webkit-keyframes wave-4 {
            50% {
                transform: scale(0.9);
            }
        }

        @-o-keyframes wave-4 {
            50% {
                transform: scale(0.9);
            }
        }

        @keyframes wave-4 {
            50% {
                transform: scale(0.9);
            }
        }

        .answer-info-content-image {
            width: 100px;
            height: 100px;
        }

        .fa-warning {
            color: black;
            font-size: 1.1em;
            font-style: italic;
        }
    </style>

</head>
<body>
<div class="title-container">
    <span class="h1">{{ 'answer.vehicleInspections'|trans({}, 'answer') }} - {{ answer.getDigitalForm().getTitle() }}</span>
</div>
<div class="inspection-form ps ps--active-y">
    <div class="primary-info-container">
        <div class="primary-info">
            <span>{{ answer.getCreatedAt()|date("Y/m/d H:i", answer.getUser().getTimeZone()) }}</span>
            <span>{{ answer.getVehicle().getRegNo() }} </span></div>
    </div>
    <div class="additional-info-container">
        <div class="additional-info"><span
                    class="additional-info-title">{{ 'answer.performedBy'|trans({}, 'answer') }}</span>
            <span>{{ answer.getUser().getFullName() }}</span></div>
        <div class="additional-info"><span
                    class="additional-info-title">{{ 'answer.inspectionPlan'|trans({}, 'answer') }}</span>
            <span>{{ answer.getDigitalForm().getTitle() }}</span></div>
        <div class="additional-info"><span
                    class="additional-info-title">{{ 'answer.result'|trans({}, 'answer') }}</span>
            <span><span class="status-{{ answer.getIsPass() ? 'pass' : 'fail' }}"> {{ answer.getIsPass() ? 'Pass' : 'Fail' }} </span> {{ answer.getStatusRatio() }} </span>
        </div>
    </div>
    <div class="answers-container">
        {% for step in answer.getStepsSorted() %}
            {% if(step.getDigitalFormStep().getOptions().type in ['list.single', 'list.multi'] ) %}
                <div class="answer ng-star-inserted">
                    <div class="answer-info ng-star-inserted">
                        <div class="answer-info-content">
                            <span class="answer-info-content-title">{{ step.getDigitalFormStep().getTitle() }}</span>
                            <span class="answer-info-content-description italic">{{ step.getDigitalFormStep().getDescription() }}</span>
                            <span class="answer-info-content-result ng-star-inserted">{{ 'answer.answer'|trans({}, 'answer') }}: </span>
                            <div class="answer-info-content-result-block">
                                {% if step.value is iterable %}
                                    {% for valueItem in step.value %}
                                        {% if(valueItem|number_format in step.getDigitalFormStep().getOptions().failIndexes) %}
                                            <i class="fa fa-warning"></i>&nbsp;<span
                                                class="italic">{{ step.getDigitalFormStep().getOptions().items[valueItem|number_format - 1].label }}</span>
                                        {% else %}
                                            <div class="checkbox-wrapper-4">
                                                <input class="inp-cbx" id="morning" type="checkbox" checked>
                                                <label class="cbx" for="morning"><span>
                              <svg width="12px" height="10px">
                                <use xlink:href="#check-4"></use>
                              </svg></span>
                                                    <span class="italic">{{ step.getDigitalFormStep().getOptions().items[valueItem|number_format - 1].label }}</span></label>
                                                <svg class="inline-svg">
                                                    <symbol id="check-4" viewBox="0 0 12 10">
                                                        <polyline points="1.5 6 4.5 9 10.5 1"></polyline>
                                                    </symbol>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    {% if(step.value|number_format in step.getDigitalFormStep().getOptions().failIndexes) %}
                                        <i class="fa fa-warning"></i>&nbsp;<span
                                            class="italic">{{ step.getDigitalFormStep().getOptions().items[step.value|number_format - 1].label }}</span>
                                    {% else %}
                                        <div class="checkbox-wrapper-4">
                                            <input class="inp-cbx" id="morning" type="checkbox" checked>
                                            <label class="cbx" for="morning"><span>
                              <svg width="12px" height="10px">
                                <use xlink:href="#check-4"></use>
                              </svg></span>
                                                <span class="italic">{{ step.getDigitalFormStep().getOptions().items[step.value|number_format - 1].label }}</span></label>
                                            <svg class="inline-svg">
                                                <symbol id="check-4" viewBox="0 0 12 10">
                                                    <polyline points="1.5 6 4.5 9 10.5 1"></polyline>
                                                </symbol>
                                            </svg>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                            {% if step.getAdditionalFileData() is not null %}
                                <div class="answer-info-content-result ng-star-inserted">
                                    <span>{{ 'answer.details'|trans({}, 'answer') }}: </span>
                                    <a target="_blank"
                                       class="answer-info-content-result ng-star-inserted"
                                       href="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                        <img class="answer-info-content-image ng-star-inserted"
                                             style="transform: rotate({{ getImageRotateDeg(api_url ~ "/" ~ step.getAdditionalFileData().path ~ step.getAdditionalFileData().name) }}deg);"
                                             src="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                    </a>
                                </div>
                            {% endif %}
                            {% if step.getAdditionalFileData() is not null or step.getAdditionalNote() is not null %}
                                <div class="answer-info-content-result ng-star-inserted">
                                    <span>{{ 'answer.details'|trans({}, 'answer') }}: </span>
                                    {% if step.getAdditionalNote() is not null %}
                                        <span class="italic ng-star-inserted">{{ step.getAdditionalNote() }}</span>
                                    {% endif %}
                                    {% if step.getAdditionalFileData() is not null %}
                                        <a target="_blank"
                                           class="answer-info-content-result ng-star-inserted"
                                           href="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                            <img class="answer-info-content-image ng-star-inserted"
                                                 style="transform: rotate({{ getImageRotateDeg(api_url ~ "/" ~ step.getAdditionalFileData().path ~ step.getAdditionalFileData().name) }}deg);"
                                                 src="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                        </a>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                        <span>{{ step.getDurationHuman() }}</span></div>
                </div>
            {% elseif(step.getDigitalFormStep().getOptions().type is same as ('signature')) %}
                <div class="answer ng-star-inserted">
                    <div class="answer-sign-container ng-star-inserted">
                        <img class="answer-signature"
                             style="transform: rotate({{ getImageRotateDeg(api_url ~ "/" ~ step.getFileData().path ~ step.getFileData().name) }}deg);"
                             src="{{ api_url }}/{{ step.getFileData().path }}{{ step.getFileData().name }}">
                        <span>{{ answer.getUser().getFullName() }}</span>
                    </div>
                </div>
            {% elseif(step.getDigitalFormStep().getOptions().type in ['file', 'image']) %}
                <div class="answer ng-star-inserted">
                    <div class="answer-info ng-star-inserted">
                        <div class="answer-info-content">
                            <span class="answer-info-content-title">{{ step.getDigitalFormStep().getTitle() }}</span>
                            <span class="answer-info-content-description italic">{{ step.getDigitalFormStep().getDescription() }}</span>
                            <div class="answer-info-content-result ng-star-inserted">
                                {% if(isImage(api_url ~ "/" ~ step.getFileData().path ~ step.getFileData().name)) %}
                                    <img class="answer-info-content-image ng-star-inserted"
                                         style="transform: rotate({{ getImageRotateDeg(api_url ~ "/" ~ step.getFileData().path ~ step.getFileData().name) }}deg);"
                                         src="{{ api_url }}/{{ step.getFileData().path }}{{ step.getFileData().name }}">
                                {% else %}
                                    <p>{{ step.getFileData().displayName }}</p>
                                {% endif %}
                            </div>
                        </div>
                        <span>{{ step.getDurationHuman() }}</span>
                    </div>
                </div>
            {% else %}
                <div class="answer ng-star-inserted">
                    <div class="answer-info ng-star-inserted">
                        <div class="answer-info-content">
                            <span class="answer-info-content-title">{{ step.getDigitalFormStep().getTitle() }}</span>
                            <span class="answer-info-content-description italic">{{ step.getDigitalFormStep().getDescription() }}</span>
                            <span class="answer-info-content-result ng-star-inserted">
                            <span>{{ 'answer.answer'|trans({}, 'answer') }}: </span>
                            <div class="answer-info-content-result-block">
                                {% if step.getDigitalFormStep().getOptions().type is same as ('datetime') %}
                                    <span class="italic">{{ step.getValue()|date("Y/m/d H:i", answer.getUser().getTimeZone()) }}</span>
                                {% else %}
                                    <span class="italic">{{ step.getValue() }}</span>
                                {% endif %}
                            </div>
                        </span>
                            {% if step.getAdditionalFileData() is not null or step.getAdditionalNote() is not null %}
                                <div class="answer-info-content-result ng-star-inserted">
                                    <span>{{ 'answer.details'|trans({}, 'answer') }}: </span>
                                    {% if step.getAdditionalNote() is not null %}
                                        <span class="italic ng-star-inserted">{{ step.getAdditionalNote() }}</span>
                                    {% endif %}
                                    {% if step.getAdditionalFileData() is not null %}
                                        <a target="_blank"
                                           class="answer-info-content-result ng-star-inserted"
                                           href="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                            <img class="answer-info-content-image ng-star-inserted"
                                                 style="transform: rotate({{ getImageRotateDeg(api_url ~ "/" ~ step.getAdditionalFileData().path ~ step.getAdditionalFileData().name) }}deg);"
                                                 src="{{ api_url }}/{{ step.getAdditionalFileData().path }}{{ step.getAdditionalFileData().name }}">
                                        </a>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                        <span>{{ step.getDurationHuman() }}</span>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
</body>
</html>